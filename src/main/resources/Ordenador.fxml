<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ControladorDeOrdenador">
    <top>
        <VBox fx:id="panelSuperiorBanner" alignment="CENTER" style="-fx-background-color: #37474F;">
            <children>
                <ImageView fx:id="imagenTitular" fitHeight="70.0" preserveRatio="false" />
            </children>
        </VBox>
    </top>
    <right>
        <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: #CFD8DC; -fx-border-color: #B0BEC5; -fx-border-width: 0 0 0 2;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Configuraci칩n" textFill="#0D47A1">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <Label text="Columna a Ordenar:" textFill="#37474F" />
                <ComboBox fx:id="selectorColumna" maxWidth="1.7976931348623157E308" promptText="Selecciona una columna" />
                <Label text="Algoritmos a Comparar:" textFill="#0D47A1">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <ScrollPane fx:id="panelScrollAlgoritmos" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="panelVerticalAlgoritmos" spacing="8.0">
                            <children>
                                <CheckBox fx:id="checkboxQuickSort" style="-fx-font-size: 13px; -fx-text-fill: black;" text="Quicksort" />
                                <CheckBox fx:id="checkboxMergeSort" style="-fx-font-size: 13px; -fx-text-fill: black;" text="Mergesort" />
                                <CheckBox fx:id="checkboxShellSort" style="-fx-font-size: 13px; -fx-text-fill: black;" text="Shell Sort" />
                                <CheckBox fx:id="checkboxSeleccion" style="-fx-font-size: 13px; -fx-text-fill: black;" text="Selecci칩n Directa" />
                                <CheckBox fx:id="checkboxRadixSort" style="-fx-font-size: 13px; -fx-text-fill: black;" text="Radix Sort" />
                                <CheckBox fx:id="checkboxArraysSort" style="-fx-font-size: 13px; -fx-text-fill: black;" text="Arrays.sort()" />
                                <CheckBox fx:id="checkboxParallelSort" style="-fx-font-size: 13px; -fx-text-fill: black;" text="Arrays.parallelSort()" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
                <Button fx:id="botonOrdenar" disable="true" maxWidth="1.7976931348623157E308" onAction="#manejarBotonOrdenar" style="-fx-background-color: #0277BD; -fx-text-fill: white; -fx-font-weight: bold;" text="Realizar Ordenamiento">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="botonCerrar" maxWidth="1.7976931348623157E308" onAction="#manejarBotonCerrar" style="-fx-background-color: #78909C; -fx-text-fill: white;" text="Cerrar">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </right>
    <center>
        <TabPane style="-fx-border-color: #B0BEC5; -fx-border-width: 0 2 0 0;" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Visualizador de Datos (CSV)">
                    <content>
                        <VBox alignment="CENTER_LEFT" spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <TableView fx:id="tablaDatos" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Resultados y Gr치fica">
                    <content>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                            <items>
                                <VBox alignment="CENTER" spacing="5.0">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                    <children>
                                        <Label text="Tiempos de Ejecuci칩n (nanosegundos)" textFill="#37474F">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <BarChart fx:id="graficaResultados" animated="false" barGap="5.0" categoryGap="10.0" legendVisible="false" VBox.vgrow="ALWAYS">
                                            <xAxis>
                                                <CategoryAxis label="Algoritmo" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis label="Tiempo (ns)" />
                                            </yAxis>
                                        </BarChart>
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                    <children>
                                        <Label text="Registro de Tiempos (Terminal)" textFill="#37474F">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextArea fx:id="areaResultadosTerminal" editable="false" style="-fx-font-family: 'monospaced';" VBox.vgrow="ALWAYS" />
                                    </children>
                                </VBox>
                            </items>
                        </SplitPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>